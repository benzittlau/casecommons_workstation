[user]
  editor = vim

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true

[apply]
  whitespace = nowarn

[format]
  pretty = format:"%h %C(yellow)%ci%Creset %Cgreen%an%Creset | %s"

[alias]
  st = status
  di = diff
  ciff = diff --cached
  co = checkout
  ci = commit
  c = commit
  br = branch
  sta = stash
  llog = log --date=local
  unpushed = !"PROJ_BRANCH=$(git symbolic-ref HEAD | sed 's|refs/heads/||') && git log origin/$PROJ_BRANCH..HEAD"
  unpulled = !"PROJ_BRANCH=$(git symbolic-ref HEAD | sed 's|refs/heads/||') && git fetch && git log HEAD..origin/$PROJ_BRANCH"
  w = whatchanged
  sw = !"git reflog | grep checkout | grep -v "\\^0$" | head -n 1 | cut -d ' ' -f 6 | xargs git checkout"

[core]
  excludesfile = <%= WS_HOME %>/.gitignoreglobal
  legacyheaders = false
  editor = vim

[push]
  default = current

[branch]
  autosetupmerge = true

